<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="769.0" prefWidth="1229.0"
           xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="client.scenes.MCQuestionScreenCtrl">
    <StackPane prefHeight="607.0" prefWidth="1506.0">
        <ProgressBar fx:id="progressBar" maxHeight="60.0" maxWidth="2000.0" prefHeight="60.0" prefWidth="829.0"
                     progress="0.0" StackPane.alignment="TOP_CENTER"/>
    </StackPane>
    <VBox alignment="CENTER" prefHeight="769.0" prefWidth="1291.0" StackPane.alignment="CENTER">

        <Region layoutX="10.0" layoutY="120.0" maxHeight="20" minHeight="20" styleClass="margin"/>
        <Label fx:id="questionLabel" alignment="CENTER" style="-fx-font-size: 54; -fx-font-family: Futura PT Medium;"
               text="Question" wrapText="true"/>
        <Region maxHeight="20" minHeight="20" styleClass="margin" VBox.vgrow="ALWAYS"/>
        <HBox alignment="BOTTOM_CENTER">
            <children>
                <VBox fx:id="questionBox1" alignment="BOTTOM_CENTER">
                    <children>
                        <ImageView fx:id="image1" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true"
                                   preserveRatio="true"/>
                        <Region prefHeight="20.0"/>
                        <Button fx:id="answer1" maxWidth="500.0" mnemonicParsing="false" onAction="#answer1Clicked"
                                styleClass="answer" text="Answer 1" wrapText="true">

                            <styleClass>
                                <String fx:value="border"/>
                                <String fx:value="rounded"/>
                                <String fx:value="game-button"/>
                            </styleClass>
                        </Button>
                    </children>
                </VBox>
                <Region prefWidth="20.0"/>
                <VBox fx:id="questionBox2" alignment="BOTTOM_CENTER">
                    <children>
                        <Region prefHeight="20.0"/>
                        <Button fx:id="answer2" maxWidth="500.0" mnemonicParsing="false" onAction="#answer2Clicked"
                                styleClass="answer" text="Answer 2" wrapText="true">
                            <styleClass>
                                <String fx:value="border"/>
                                <String fx:value="rounded"/>
                                <String fx:value="game-button"/>
                            </styleClass>
                        </Button>
                    </children>
                </VBox>
                <Region prefWidth="20.0"/>
                <VBox fx:id="questionBox3" alignment="BOTTOM_CENTER">
                    <children>
                        <Region prefHeight="20.0"/>
                        <Button fx:id="answer3" maxWidth="500.0" onAction="#answer3Clicked" styleClass="answer"
                                text="Answer 3" wrapText="true">

                            <styleClass>
                                <String fx:value="border"/>
                                <String fx:value="rounded"/>
                                <String fx:value="game-button"/>
                            </styleClass>
                        </Button>
                    </children>
                </VBox>
            </children>
        </HBox>
    </VBox>
    <StackPane maxHeight="132.0" maxWidth="1.7976931348623157E308" prefHeight="132.0" styleClass="padding, margin"
               StackPane.alignment="BOTTOM_CENTER">
        <children>
            <Button fx:id="exit" onAction="#exit" text="Leave" StackPane.alignment="BOTTOM_LEFT">
                <styleClass>
                    <String fx:value="exit"/>
                    <String fx:value="rounded"/>
                </styleClass>
            </Button>
            <HBox alignment="BOTTOM_CENTER" maxWidth="-Infinity" prefWidth="600.0" StackPane.alignment="TOP_CENTER">
                <StackPane.margin>
                    <Insets/>
                </StackPane.margin>
                <children>
                    <Button fx:id="joker1" alignment="CENTER" contentDisplay="CENTER" minHeight="-Infinity"
                            minWidth="-Infinity" mnemonicParsing="false" onAction="#joker1" prefHeight="100.0"
                            prefWidth="140.0" styleClass="joker" text="1"/>
                    <Region prefWidth="40.0" styleClass="margin"/>
                    <Button fx:id="joker2" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity"
                            mnemonicParsing="false" onAction="#joker2" prefHeight="100.0" prefWidth="140.0"
                            styleClass="joker" text="2"/>
                    <Region layoutX="851.0" layoutY="10.0" prefWidth="40.0" styleClass="margin"/>
                    <Button fx:id="joker3" alignment="CENTER" layoutX="851.0" layoutY="41.0" minHeight="-Infinity"
                            minWidth="-Infinity" mnemonicParsing="false" onAction="#joker3" prefHeight="100.0"
                            prefWidth="140.0" styleClass="joker" text="3"/>
                </children>
            </HBox>
        </children>
    </StackPane>

</StackPane>
