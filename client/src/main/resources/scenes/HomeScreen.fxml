<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="parentContainer" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="893.0" prefWidth="1318.0" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.HomeScreenCtrl">
    <StackPane styleClass="padding, margin" stylesheets="@../css/main.css">
      <Button fx:id="darkMode" mnemonicParsing="false" styleClass="border, dark" onAction="#toggleDarkMode" text="Dark mode" StackPane.alignment="TOP_RIGHT">
         <styleClass>
            <String fx:value="border" />
            <String fx:value="rounded" />
         </styleClass>
      </Button>
        <Button fx:id="back" onAction="#exitApp" styleClass="border, exit, rounded" stylesheets="@../css/main.css" text="Exit" StackPane.alignment="TOP_LEFT" />
    </StackPane>
    <VBox alignment="CENTER" maxWidth="640" stylesheets="@../css/main.css" StackPane.alignment="CENTER">
        <Label alignment="CENTER" prefHeight="91.0" prefWidth="386.0" text="Quizzzz!" />
        <Label fx:id="titleField" alignment="CENTER" prefHeight="39.0" prefWidth="576.0" styleClass="rounded">
            <font>
                <Font size="31.0" />
            </font>
        </Label>
        <TextField fx:id="inputTitleField" prefHeight="25.0" prefWidth="416.0" promptText="Input username" styleClass="rounded">
            <font>
                <Font size="21.0" />
            </font>
        </TextField>
        <Region maxHeight="20" minHeight="20" styleClass="margin" VBox.vgrow="ALWAYS" />
        <Button fx:id="changeTitleButton" mnemonicParsing="false" onAction="#changeTitleButtonClicked" styleClass="mainButton, rounded" text="Set username" />
        <Region maxHeight="20" minHeight="20" styleClass="margin" VBox.vgrow="ALWAYS" />
        <Button fx:id="singleplayerButton" mnemonicParsing="false" prefHeight="84.0" prefWidth="290.0" style="-fx-border-radius: 1000px;" styleClass="mainButton, rounded" text="Singleplayer">
            <font>
                <Font size="40.0" />
            </font>
        </Button>
        <Region maxHeight="20" minHeight="20" styleClass="margin" VBox.vgrow="ALWAYS" />
        <Button fx:id="multiplayerButton" mnemonicParsing="false" onAction="#showWaitingRoom" prefHeight="84.0" prefWidth="290.0" style="-fx-border-radius: 1000px;" styleClass="mainButton, rounded" text="Multiplayer">
            <font>
                <Font size="40.0" />
            </font>
        </Button>
        <Region maxHeight="20" minHeight="20" styleClass="margin" VBox.vgrow="ALWAYS" />
        <TextField prefHeight="25.0" prefWidth="416.0" promptText="Room URL" styleClass="rounded" />
    </VBox>

</StackPane>
